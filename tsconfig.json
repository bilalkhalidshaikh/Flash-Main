{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@flash/*": ["src/*"],
      "@flash/components/*": ["src/components/*"],
      "@flash/images/*": ["public/images/*"],
      "@flash/images": ["public/images"]
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "types/*.ts", "public", "./src/**/*"],
  "exclude": ["node_modules"]
}
